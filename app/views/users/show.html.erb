<div class='container'>

  <ul class='list-inline'>
  <li> <h1 class='main-header text-center black'>Hi <%= current_user.name %> </h1> </li>
  <li> <h5 class='pull-right black sign-out'><%= link_to "Sign Out", sign_out_path, class: 'black' %></h5> </li>
  </ul>

  <h3>You still have 3 goals to add for today. </br>
    <%= link_to "Add one now", new_todo_path %>
  </h3>

  <% current_user.todos.each do |todo| %>
    <% if todo.created_today? # && (todo.status == nil) %>
      <p><%= render 'todos/todo_card', todo: todo %></p>
    <% end %>
  <% end %>

</div>